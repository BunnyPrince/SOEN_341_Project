<link href="/style/basic.css" rel="stylesheet" type="text/css">
<link href="/style/custom.css" rel="stylesheet" type="text/css">

<%- include('../partials/header') %>
<main>
    <div align="center">
        <div class="col-sm-6 p-5">
            <div class="card btn-card">
                <div class="card-body">
                    <form action="/images" method="POST" enctype="multipart/form-data" class="clearfix">
                        <div style="padding: 10px;">
                            <img id="file" class="w-100" src="https://i.ibb.co/ZVFsg37/default.png">
                        </div>

                        <div style="padding: 10px;">
                            <input type="file" name="image" id="file-ip-1" accept="image/*"
                               onchange="showPreviewOne(event);" required>
                        </div>

                        <div style="padding: 10px; padding-bottom: 0px">
                             <input class="card-input" type="text" id="caption" name="caption" placeholder="Add a caption">
                        </div>


                        <div class="float-end mt-4">
                            <button class="btn btn-button">Add Image</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</main>

<%- include('../partials/footer') %>

<script src="/scripts/image.js"></script>
