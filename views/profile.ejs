      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
<link href="/style/basic.css" rel="stylesheet" type="text/css">
<link href="/style/custom.css" rel="stylesheet" type="text/css">
<link href="/style/styles.css" rel="stylesheet" type="text/css">
<link href="/style/Profile.css" rel="stylesheet" type="text/css">

<%- include('partials/header') %>

<main>

    <br>
    <div class="cardd">
        <div class="card-body-p">
            <div class="boxes">
                <!-- User profile description: pfp, username, bio, number of followers/followings -->
                <div class="Bio">
                    <img src="<%= user.pfp.url %>" width="150" alt="">
                    <%= user.username %>
                    <button type="button"
                            onclick="showList('<%= user._id %>', '<%= isBeingFollowed %>', '<%= duplicateUser %>', 'followers', '<%= user.username %>')">
                        followers
                    </button>
                    <%= user.followers.length %>
                    <button type="button"
                            onclick="showList('<%= user._id %>', '<%= isBeingFollowed %>', '<%= duplicateUser %>', 'follows', '<%= user.username %>')">
                        followings
                    </button>
                    <%= user.follows.length %>
                </div>

                <div class="Bio">
                    <p>I'm a Barbadian singer, actress, and businesswoman. </p>
                    <p>Born in Saint Michael and raised in Bridgetown, Barbados. </p>
                    <p>Discovered by American record producer Evan Rogers. </p>
                </div>
            </div>

            <!-- Listing of the posts from the user -->
            <div class="container-for-profile">
                <div class="gallery">
                    <% for (const image of user.images) { %>
                        <a href="/images/<%= image._id %>">
                            <img class="galleryimage"
                                 src="<%= image.url %>" alt="">
                        </a>
                    <% } %>
                </div>
            </div>

        </div>

        <!-- Follow/Unfollow buttons -->
        <button type="button"
        <% if (isBeingFollowed || duplicateUser) { %>
                style="display: none"
                <% } %>
                onclick="editFollow('<%= user._id %>', 'follow')">Follow
        </button>
        <button type="button"
        <% if (!isBeingFollowed || duplicateUser) { %>
                style="display: none"
                <% } %>
                onclick="editFollow('<%= user._id %>', 'unfollow')">Unfollow
        </button>

    </div>

    <div id="overlay"
    <% if (overlay) { %>
         class="active">
        <% } %>
    </div>

    <div id="myModal" class="modal" style="display: block">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <p>List</p>
                <form action="/<%= user.username %>" method="get">
                    <button type="submit">&times;</button>
                </form>
            </div>
            <div class="modal-body">
                <!--<p>Haha, it's nothing...</p>-->
                <% usersList.forEach(f => { %>
                    <img src="<%= f.pfp.url %>" width="30" alt="pfp">
                    <p><a href="/<%= f.username %>"><%= f.username %></a></p>
                <% }) %>
            </div>
        </div>
    </div>
</main>

<script>
    function editFollow(userid, type) {
        console.log('clicked ' + type);
        var form = document.createElement('form');
        form.setAttribute('method', 'post');
        form.setAttribute('action', '/' + type + '?_method=PUT');
        var input = document.createElement('input');
        input.setAttribute('name', 'userid');
        input.setAttribute('value', userid);
        form.style.display = 'hidden';
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
    }

    function showList(userid, isBeingFollowed, duplicateUser, type, username) {
        console.log('clicked ' + type);
        var form = document.createElement('form');
        form.setAttribute('method', 'post');
        form.setAttribute('action', '/' + username + '/' + type);
        var inputUserID = document.createElement('input');
        inputUserID.setAttribute('name', 'userid');
        inputUserID.setAttribute('value', userid);
        var inputFollowed = document.createElement('input');
        inputFollowed.setAttribute('name', 'isBeingFollowed');
        inputFollowed.setAttribute('value', isBeingFollowed);
        var inputDuplicate = document.createElement('input');
        inputDuplicate.setAttribute('name', 'duplicateUser');
        inputDuplicate.setAttribute('value', duplicateUser);
        form.appendChild(inputUserID);
        form.appendChild(inputFollowed);
        form.appendChild(inputDuplicate);
        form.style.display = 'hidden';
        document.body.appendChild(form);
        form.submit();
    }
</script>

<%- include('./partials/footer') %>
