<html style="background-color:#f1f3f5;">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

<link href="/style/login.css" rel="stylesheet" type="text/css">
<link href="/style/similar.css" rel="stylesheet" type="text/css">


<main class="btn-background">
    <div  align="center">
        <article class="article_centering">
            <div class="card btn-card">

                <h1 class="name-inst">
                    <img src="/images/logo.png" width=170px height=70px alt="">
                </h1>

                <div class="card-body">
                    <% for (let m of msg) { %>
                        <h4> <%= m %> </h4>
                    <% } %>

                        <form id="login-form" action="/login" method="post" class="clearfix">

                            <div id="login-div" class="input1"></div>
                            <div class="input1">
                                <input class="login-input" placeholder="Enter username" name="username" required>
                            </div>

                            <div class="input2">
                                <input type="password" class="login-input" placeholder="Enter password" name="password" required>
                            </div>

                            <button class="btn btn-button">Login</button>
                        </form>
                </div>
            </div>

            <div class="card btn-card">
                <p style="vertical-align: inherit">Don't have an account yet?
                <a href ='/register';>Register</a>
                </p>
            </div>
        </article>
    </div>
</main>

<%- include('./partials/footer') %>
</html>
